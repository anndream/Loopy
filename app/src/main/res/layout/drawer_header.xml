<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/action"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        >

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:paddingTop="@dimen/nav_header_vertical_spacing"-->
    <!--app:srcCompat="@drawable/loopy_logo"-->
    <!--android:tint="@color/white"-->
    <!--android:contentDescription="CONTENT"-->
    <!--android:id="@+id/imageView"/>-->

    <TextView
            android:id="@+id/tv_app_name"
            style="@style/MatchWidth"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/drawer_header"
            android:textAppearance="@style/Text.HeaderLarge.Bold"
            app:layout_constraintBottom_toTopOf="@id/tv_version_label"/>

    <TextView
            style="@style/WrapContent"
            android:text="@string/drawer_subtitle"
            android:textAppearance="@style/Text.SubHeaderLarge"
            android:id="@+id/tv_version_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_version_number"
            style="@style/WrapContent"
            android:text="0.7"
            android:textAppearance="@style/Text.SubHeaderLarge"
            app:layout_constraintStart_toEndOf="@id/tv_version_label"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
