<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="de.michaelpohl.loopy.ui.main.player.PlayerViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/main"
            style="@style/MatchParent"
            android:background="@color/window_background"
            tools:context=".ui.main.player.PlayerFragment">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/ll_settings_dropdown"
                style="@style/MatchWidth"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="parent"
                android:focusable="true"
                android:clickable="true"
                android:elevation="8dp"
                android:padding="8dp"
                android:background="@color/action_dark"
                >

            <TextView
                    android:id="@+id/tv_header"
                    style="@style/WrapContent"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="@string/dropdown_header_settings"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_header"/>

            <TextView
                    android:id="@+id/tv_label_switching_behaviour"
                    style="@style/MatchParent"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Behaviour when switching loops:"
                    app:layout_constraintEnd_toStartOf="@id/btn_toggle_switching_behavoiour"
                    app:layout_constraintBaseline_toBaselineOf="@id/btn_toggle_switching_behavoiour"/>

            <Button
                    android:id="@+id/btn_toggle_switching_behavoiour"
                    style="@style/Button.Borderless"
                    android:textColor="@color/white"
                    android:onClick="@{model::onSwitchingBehaviourToggled}"
                    android:text="@{model.switchBehaviourButtonText}"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_label_pick_filetypes"
                style="@style/MatchParent"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:text="Accepted file types:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_change_filetypes"
                app:layout_constraintBaseline_toBaselineOf="@id/btn_change_filetypes"/>

            <TextView
                    android:id="@+id/tv_subtitle_pick_filetypes"
                    style="@style/MatchParent"
                    android:layout_width="0dp"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/white"
                    android:text="@{model.acceptedFileTypesAsString}"
                    app:layout_constraintEnd_toStartOf="@id/btn_change_filetypes"
                   app:layout_constraintTop_toBottomOf="@id/tv_label_pick_filetypes"
                    app:layout_constraintStart_toStartOf="parent"/>

            <Button
                    android:id="@+id/btn_change_filetypes"
                    style="@style/Button.Borderless"
                    android:textColor="@color/white"
                    android:onClick="@{model::onChangeAllowedFileTypesClicked}"
                    android:text="Change"
                    app:layout_constraintTop_toBottomOf="@id/btn_toggle_switching_behavoiour"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
                android:id="@+id/ll_files_dropdown"
                style="@style/MatchWidth"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="parent"
                android:focusable="true"
                android:clickable="true"
                android:elevation="8dp"
                android:padding="8dp"
                android:background="@color/action_dark"
                >

            <TextView
                    style="@style/WrapContent"
                    android:layout_gravity="end"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="@string/dropdown_header_browser"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:padding="8dp"/>

            <Button
                    android:id="@+id/btn_browse_storage"
                    style="@style/Button.Borderless"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:onClick="@{model::onBrowseStorageClicked}"
                    android:text="@string/btn_browse_storage"/>

            <Button
                    android:id="@+id/btn_clear_list"
                    style="@style/Button.Borderless"
                    android:textColor="@color/white"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="end"
                    android:onClick="@{model::onClearListClicked}"
                    android:visibility="@{model.clearListButtonVisibility}"
                    android:text="@string/btn_clear_list"/>

        </LinearLayout>

        <View
                android:id="@+id/shadow_overlay"
                style="@style/MatchParent"
                android:clickable="true"
                android:elevation="4dp"
                android:visibility="@{model.overlayVisibility}"
                android:onClick="@{model::onOverlayClicked}"
                android:background="@color/transparent_overlay">

        </View>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_loops"
                style="@style/MatchWidth"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_stop"
                android:background="@color/window_background"/>

        <TextView
                android:id="@+id/tv_empty_message"
                style="@style/MatchWidth"
                android:text="You have no loops selected. Click on &quot;Find Loops&quot; to browse your phone's storage"
                android:gravity="center"

                android:visibility="@{model.emptyMessageVisibility}"
                android:layout_height="0dp"
                android:layout_margin="24dp"
                android:textAppearance="@style/Text.HeaderLarge"
                app:layout_constraintBottom_toBottomOf="@+id/rv_loops"
                app:layout_constraintTop_toTopOf="@+id/rv_loops"
                app:layout_constraintEnd_toEndOf="@+id/rv_loops"
                app:layout_constraintStart_toStartOf="@id/rv_loops"/>

        <View
                style="@style/MatchConstraints"
                android:background="@color/content_background"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rv_loops"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <ImageButton
                android:id="@+id/btn_play"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_play"
                android:tint="@{model.isPlaying? @color/action : @color/white}"
                android:onClick="@{model::onStartPlaybackClicked}"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_pause"
                />

        <ImageButton
                android:id="@+id/btn_stop"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_stop"
                android:tint="@color/white"
                android:onClick="@{model::onStopPlaybackClicked}"
                android:elevation="2dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_pause"
                />

        <ImageButton
                android:id="@+id/btn_pause"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_pause"
                android:tint="@color/white"
                android:onClick="@{model::onPausePlaybackClicked}"
                app:layout_constraintBottom_toBottomOf="parent"
                android:elevation="2dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

    </android.support.constraint.ConstraintLayout>
</layout>