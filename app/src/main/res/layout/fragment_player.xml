<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="de.michaelpohl.loopy.ui.main.PlayerViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/main"
            style="@style/MatchParent"
            android:background="@color/content_background"
            tools:context=".ui.main.PlayerFragment">

        <TextView
                android:id="@+id/tv_loops_header"
                style="@style/Row"
                android:textAppearance="@style/Text.HeaderLarge"
                android:text="My Loops:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_loops"
                style="@style/MatchWidth"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_loops_header"
                app:layout_constraintBottom_toTopOf="@id/btn_select_folder"
                android:background="@color/window_background"/>

        <Button
                android:id="@+id/btn_select_folder"
                style="@style/Button"
                android:text="Select Folder"
                android:onClick="@{model::onSelectFolderClicked}"
                app:layout_constraintBottom_toTopOf="@id/btn_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />



        <ImageButton
                android:id="@+id/btn_1"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:onClick="@{model::onStartClicked}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_3"
                />

        <ImageButton
                android:id="@+id/btn_2"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_stop_black_24dp"
                android:onClick="@{model::onStopClicked}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_3"
                />

        <ImageButton
                android:id="@+id/btn_3"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_pause_black_24dp"
                android:onClick="@{model::onPauseClicked}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

    </android.support.constraint.ConstraintLayout>
</layout>