<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="model"
                type="de.michaelpohl.loopy.ui.main.PlayerViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/main"
            style="@style/MatchParent"
            android:background="@color/content_background"
            tools:context=".ui.main.PlayerFragment">

        <TextView
                android:id="@+id/tv_loops_header"
                style="@style/Row"
                android:textAppearance="@style/Text.HeaderLarge"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="64dp"
                app:layout_constraintHorizontal_bias="1.0"
                />

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_loopy_logo"
                android:layout_width="128dp"
                android:layout_height="0dp"
                android:src="@drawable/loopy_logo"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/tv_loops_header"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_loops_header"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_loops"
                style="@style/MatchWidth"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_loops_header"
                app:layout_constraintBottom_toTopOf="@id/btn_stop"
                android:background="@color/window_background"/>

        <TextView
                android:id="@+id/tv_empty_message"
                style="@style/MatchWidth"
                android:text="TBD"
                android:visibility="@{model.emptyMessageVisibility}"
                android:layout_height="0dp"
                android:textAppearance="@style/Text.HeaderLarge"
                app:layout_constraintBottom_toBottomOf="@+id/rv_loops"
                app:layout_constraintTop_toTopOf="@+id/rv_loops"
                app:layout_constraintEnd_toEndOf="@+id/rv_loops"
                app:layout_constraintStart_toStartOf="@id/rv_loops"/>

        <Button
                android:id="@+id/btn_select_folder"
                style="@style/Button"
                android:text="Select Folder"
                android:onClick="@{model::onSelectFolderClicked}"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_loops_header"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="50dp"/>

        <ImageButton
                android:id="@+id/btn_play"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_play_arrow_black"
                android:onClick="@{model::onStartClicked}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_pause"
                />

        <ImageButton
                android:id="@+id/btn_stop"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_stop_black"
                android:onClick="@{model::onStopClicked}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_pause"
                />

        <ImageButton
                android:id="@+id/btn_pause"
                style="@style/Button.SmallIcon"
                android:src="@drawable/ic_pause_black"
                android:onClick="@{model::onPauseClicked}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

    </android.support.constraint.ConstraintLayout>
</layout>