<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_label_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:text="setting"
        android:textColor="@color/action"
        app:layout_constraintBottom_toTopOf="@id/tv_label_second"
        app:layout_constraintEnd_toStartOf="@id/guide_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rb_radio_first" />

    <TextView
        android:id="@+id/tv_label_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:text="setting"
        android:textColor="@color/action"
        app:layout_constraintBottom_toBottomOf="@id/rb_radio_second"
        app:layout_constraintEnd_toStartOf="@id/guide_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_first" />

    <RadioButton
        android:id="@+id/rb_radio_first"
        style="@style/WrapContent"
        android:buttonTint="@color/action"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/rb_radio_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_right"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rb_radio_second"
        style="@style/WrapContent"
        android:buttonTint="@color/action"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_right"
        app:layout_constraintTop_toBottomOf="@id/rb_radio_first" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="72dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
